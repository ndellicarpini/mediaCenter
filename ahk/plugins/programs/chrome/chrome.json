{
    "id": "chrome",
    "name": "Google Chrome",
    "className": "ChromeProgram",

    "allowQuickAccess": true,
    "requireFullscreen": true,

    "dir": "C:\\Program Files\\Google\\Chrome\\Application\\",
    "exe": "chrome.exe",
    "overlay": "Picture in picture",

    "mouseMoveDelay": 100,
    "fullscreenDelay": 100,

    "mouse": {
        "initialPos": [0.5, 0.5],
        "x": 1,
        "y": -2,
        "vscroll": -4,
        "lclick": 1,
        "rclick": 3,
        "deadzone": 0.15
    },

    "hotkeys": {
        "buttonTime": 0,
        "[REPEAT]3>0.75": "program.zoomIn",
        "[REPEAT]3<-0.75": "program.zoomOut",

        "[REPEAT]11": "Send {Up}",
        "[REPEAT]12": "Send {Down}",
        "[REPEAT]13": "Send {Left}",
        "[REPEAT]14": "Send {Right}",

        "[REPEAT]2": "Send {Backspace}",
        "4": "Send !{Home}",
        "5": "Send ^+{Tab}",
        "6": "Send ^{Tab}",
        "5>0.75": "Send !{Left}",
        "6>0.75": "Send !{Right}",

        "7": {
            "down": "toggleKeyboard",
            "time": 70
        },
        "8": {
            "down": "Send ^t",
            "time": 70
        },
    },

    "pauseOptions": {
        "Toggle Picture-in-Picture": "program.pip"
    },
    "pauseOrder": ["Toggle Picture-in-Picture"]
}